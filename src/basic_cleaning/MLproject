name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name for the artifact
        type: string

      output_artifact:
        description: Name for the W&B artifact that will be created
        type: string

      output_type:
        description: Type of the artifact to create
        type: string

      output_description:
        description: Description for the artifact
        type: string

      min_price:
        description: Minimum price for cleaning outliers
        type: float

      max_price:
        description: Maximum price for cleaning outliers
        type: float



    command: >-
        python run.py  --parameter1 {parameter1}  --parameter2 {parameter2}  --parameter3 {parameter3} 
